#include <stdio.h>

int main() {
    int totalRooms, allocated, i;

    printf("Enter total number of rooms in hostel: ");
    scanf("%d", &totalRooms);

    int rooms[totalRooms];   
    for (i = 0; i < totalRooms; i++) {
        rooms[i] = 0;   
    }

    printf("\nEnter number of rooms to allocate: ");
    scanf("%d", &allocated);

    if (allocated > totalRooms) {
        printf("\nError: Cannot allocate more rooms than available!\n");
        return 0;
    }
    for (i = 0; i < allocated; i++) {
        rooms[i] = 1;        
    }

    printf("\nRoom Allocation Successful!\n");
    printf("\nAllocated Rooms: ");
    for (i = 0; i < totalRooms; i++) {
        if (rooms[i] == 1) {
            printf("%d ", i + 1);
        }
    }

    
    printf("\nAvailable Rooms: ");
    for (i = 0; i < totalRooms; i++) {
        if (rooms[i] == 0) {
            printf("%d ", i + 1);
        }
    }

    printf("\n");

    return 0;
}
