#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char pass[100];  
    int i;
    int upper = 0, lower = 0, digit = 0;

    printf("Enter your password: ");
    scanf("%99s", pass);   


    if (strlen(pass) < 8) {
        printf("Your password requires minimum eight characters!!\n");
        return 0;
    }


    for (i = 0; i < strlen(pass); i++) {
        if (islower(pass[i])) {
            lower++;
        }
        if (isupper(pass[i])) {
            upper++;
        }
        if (isdigit(pass[i])) {
            digit++;
        }
    }


    if (lower > 0 && upper > 0 && digit > 0) {
        printf("YOUR PASSWORD IS STRONG\n");
    } else {
        printf("YOUR PASSWORD IS WEAK\n");
    }

    return 0;
}
